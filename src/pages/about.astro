                                    skillClass="skill_wrapper graphic"
                                    imageSource="/skill_image/canva.svg"
                                    imageAlt="Canva"
                                    skillName="Canva"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>