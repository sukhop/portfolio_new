---
import Layout from '../layouts/Layout.astro';
import Cards from '../components/techcard/techcard.astro';
---

<Layout title="SukhOP Portfolio">
	<section class="hero">
		<div class="section section-y">
			<div class="portfolio_wrapper">
				<div class="portfolio_text py-6rem">
					<h1>
						Hello!<span>👋🏻</span>, I'm<br>
						<span class="text_primary">Sukhbir Singh.</span>
					</h1>
					<h6 class="sub mt-4">I'm a <span class="age"></span>-years-old Self-Taught Graphic Designer & Front-End Developer!!</h6>
					<div class="button_group">
						<a href="#" class="theme_button">:hireMe() <i class="fa-solid fa-user-tie"></i></a>
						<a href="sukh_resume.pdf" class="theme_button">:resume() <i class="fa-solid fa-file-arrow-down"></i></a>
					</div>
				</div>
				<div class="portfolio_image py-6rem">
					<Cards cardClass="tech_wrapper one" imageSource="images/photoshop.svg" toolName="Adobe Photoshop"/>
					<Cards cardClass="tech_wrapper two" imageSource="images/illustrator.svg" toolName="Adobe Illustrator"/>
					<Cards cardClass="tech_wrapper three" imageSource="images/astro.svg" toolName="Astro Framework"/>
					<Cards cardClass="tech_wrapper four" imageSource="images/xd.svg" toolName="Adobe XD"/>
					<Cards cardClass="tech_wrapper five" imageSource="images/tailwind.svg" toolName="Tailwind CSS"/>
					<div class="self_image">
						<img src="images/portfolio_image.webp" alt="">
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>